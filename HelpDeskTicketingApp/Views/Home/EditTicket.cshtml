@using HelpDeskTicketingApp.Models
@model  UpdateTicket
@{
    ViewBag.Title = "EditTicket";
}



<div class="row">

    <div class="col-lg-6">
        <div class="box box-info">
            <div class="box-header">
                <i class="fa fa-bullhorn"></i>
                <h3 class="box-title">Edit Ticket</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
               @using (Html.BeginForm(new { @class = "form-horizontal" }))
               {


                <div class="form-group">
                    <p>Select Issue Type</p>
                    <p>
                        @Html.HiddenFor(m => m.IssueId)
                        @Html.DropDownListFor(m => m.IssueTypeId, new SelectList(Model.Types, "Value", "Display"), "-Issue Type-", new  {@class ="form-control" })
                    </p>
                </div>

                <div class="form-group">
                    <p>
                        Issue Description:<br />
                    </p>

                    @Html.TextAreaFor(m => m.IssueDescription , new  {@class ="form-control" })
                </div>



                <input class="btn btn-default" type="submit" value="Update Ticket" />

               }
            </div><!-- /.box-body -->
        </div>


    </div>
</div>

